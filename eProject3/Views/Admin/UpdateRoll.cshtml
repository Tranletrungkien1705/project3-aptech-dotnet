@model List<IdentityRole>;
@using Microsoft.AspNetCore.Identity;
@{
    var UserRole = ViewBag.UserRole as List<String>;
    var userId = ViewBag.userId as string;
}


<div class="modal-dialog">
    <form class="modal-content" method="POST" action="/Admin/DoUpdateRoll">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">    
                <div class="form-group">
                    <label for="userId">Id:</label>
                    <input type="text" id="userId" name="userId" value="@userId" disabled>
                    <div>
                    @foreach(var item in Model)
                    {
                        <label for="arrRole">@item.Name</label>
                        <input type="checkbox" name="arrRole" value="@item.Name" @(UserRole.Contains(item.Name) ? "checked":"")/>
                    }
                </div>
                </div>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
</div>